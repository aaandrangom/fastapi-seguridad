import pyodbc
class dbConection():
  server = ""
  def __init__(self, user, psw):
    # Configuración de la conexión a la base de datos
    self.server = "apdistserver.database.windows.net"
    self.database = "SecurityDB"
    self.user = user
    self.psw = psw

  def openConection(self):
    # Cadena de conexión
    conn_str = (
      "DRIVER={ODBC Driver 17 for SQL Server};"
      f"SERVER={self.server},{1433};"
      f"DATABASE={self.database};"
      f"UID={self.user};"
      f"PWD={self.psw};"
    )
    return conn_str

